<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PinCodeActivity">

    <include
        android:id="@+id/resetPasswordBackground"
        layout="@layout/reset_password_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/logoLayout"
        layout="@layout/logo" />

    <TextView
        android:id="@+id/successfulMessageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/successful_message"
        android:textSize="25sp" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_below="@id/successfulMessageTxt"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/light_orange_2"
        android:text="@string/continue_"
        android:textSize="19sp" />

</RelativeLayout>